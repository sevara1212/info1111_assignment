{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "rewrites": [
    {
      "source": "/api/edge/:path*",
      "destination": "/api/edge/:path*"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/cleanup-bookings",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/maintenance-reminder",
      "schedule": "0 9 * * 1"
    }
  ],
  "regions": ["syd1"],
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://strata-management.vercel.app",
    "BOOKING_SECRET": "@booking-secret"
  }
}
